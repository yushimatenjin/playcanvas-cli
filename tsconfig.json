{
  "compilerOptions": {
    "target": "es2017",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "lib": ["dom", "es2017"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "outDir": "./built",
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
